doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Parking Section
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
  link(href='/css/css_bootstrap/bootstrap.min.css' rel='stylesheet')
  link(href='/css/stylepark.css' rel='stylesheet')
.card
  .card-header
    | ParkVille 
    .navbtns
      a.btn.btn-primary(href='/table') Table
      a.btn.btn-primary.killbtn(href='/logout') Log out
  .card-body
    .container.formcontain
      form.row.g-3.align-items-center(action='/park' method='POST')
        .col-12
          label.visually-hidden(for='inlineFormInputGroupUsername') Driver's Name
          .input-group
            input#inlineFormInputGroupUsername.form-control(type='text' placeholder="Enter Driver's Name" name='driver_name')
        br
        .col-12
          label.visually-hidden(for='inlineFormInputGroupUsername') Driver's Phone Number
          .input-group
            input#inlineFormInputGroupUsername.form-control(type='text' placeholder="Enter Driver's Phone number: 07xx-xxx-xxx" name='phone_number')
        br
        .col-12
          label.visually-hidden(for='inlineFormInputGroupUsername') Driver's NIN Number
          .input-group
            input#inlineFormInputGroupUsername.form-control(type='text' placeholder="Enter Driver's NIN number" name='nin_number')
        br
        .col-12
          label.visually-hidden(for='inlineFormSelectPref') Automobile
          select#inlineFormSelectPref.form-select(name='automobile')
            option(selected='') Please select an automobile type
            option(value='Personal Car') Personal Car
            option(value='Truck') Truck
            option(value='Taxi') Taxi
            option(value='Coaster') Coaster
            option(value='Boda-boda') Boda-boda
        br
        .col-12
          label.visually-hidden(for='inlineFormInputGroupUsername') AutoMobile numberplate 
          .input-group
            input#inlineFormInputGroupUsername.form-control(type='text' placeholder="Enter the AutoMobile's numberplate" name='autoModel')
        br
        .col-12
          label.visually-hidden(for='inlineFormInputGroupUsername') AutoMobile model
          .input-group
            input#inlineFormInputGroupUsername.form-control(type='text' placeholder='Enter the AutoMobile model' name='autoModel')
        br
        .col-12
          label.visually-hidden(for='inlineFormInputGroupUsername') AutoMobile's Color
          .input-group
            input#inlineFormInputGroupUsername.form-control(type='text' placeholder="Enter the AutoMobile's color" name='autoColor')
        br
        .col-12
          label.visually-hidden(for='inlineFormInputGroupUsername') Arrival Time
          .input-group
            .input-group-text Arrival Time
            input#inlineFormInputGroupUsername.form-control(type='time' placeholder='Enter Time of Arrival' name='arrivalTime')
        br
        .col-12
          label.visually-hidden(for='inlineFormInputGroupUsername') Arrival Date
          .input-group
            .input-group-text Arrival Date
            input#inlineFormInputGroupUsername.form-control(type='time' placeholder='Enter Date of Arrival' name='arrivalDate')
        br
        .col-12
          fieldset.row.mb-3
            legend.col-form-label.col-sm-2.pt-0 Select Parking Choice
            .col-sm-10
              .form-check
                input#gridRadios1.form-check-input(type='radio' name='parkchoice' value='day' checked='')
                label.form-check-label(for='gridRadios1')
                  Day
              .form-check
                input#gridRadios2.form-check-input(type='radio' name='parkchoice' value='night')
                label.form-check-label(for='gridRadios2')
                  Night
              .form-check
                input#gridRadios3.form-check-input(type='radio' name='parkchoice' value='lessThanThreeHours')
                label.form-check-label(for='gridRadios3')
                  Less than 3 hours
        br
        .col-12
          button.btn.btn-primary(type='submit') Submit
  .card-footer.text-center
